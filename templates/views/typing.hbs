    <title>Typing Speed</title>
</head>

<body style="background-color: aqua;">

    <div class="col-md-6 offset-md-3">
        <div class="shadow-sm bg-white border" style="margin-top: 10px; border-radius: 25px;">


            <div class="text-center" style="font-size: 60px; font-family:'Times New Roman', Times, serif ;">Typing Speed Project Using JavaScript</div>


        </div>
        <div class="shadow-sm bg-white border my-4">


            <div class="form-group m-4">


                <input type="text" name="text_to_write" placeholder="Click Start Button To Get A Text" id="text_to_write" disabled style="width: 100%; border-radius: 10px; height: 70px;">


            </div>
            <div class="m-5" id="text_written" style="font-size: 20px; font-family: Georgia, 'Times New Roman', Times, serif;">





            </div>
            <div class="form-group m-4">


                <textarea name="text_write" id="text_write" placeholder="Enter Given Text" disabled style="width: 100%; background-color: darkgray; border-radius: 10px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; height: 250px;"></textarea>


            </div>
            <div class="d-flex justify-content-center mb-4">

                <button type="button" class="btn btn-info" id="text_button" style="width: 18rem;">Start</button>

            </div>

        </div>


    </div>


    <script>
        let Start_Time, End_time, time_take, No_of_words, total_speed, msg;
        var text = ["This Is My Project Using JavaScript", "This Is My Project For Practice Of Advance JavaScript", "This Is Just For Testing Purpose Not For Production", "You Can Test Your Texting Speed"];
        const Text_Start = () => {
            text_written.innerText = null
            var text_to_write = document.getElementById('text_to_write');
            text_to_write.value = text[Math.round(Math.random() * text.length)];
            Start_Time = new Date().getTime()

        }

        const Text_End = () => {

            No_of_words = text_write.value.split(" ").length;

            console.log(No_of_words)
            text_write.value = "";
            End_time = new Date().getTime()
            time_take = ((End_time - Start_Time) / 1000)
            console.log(time_take)
            total_speed = Math.round((No_of_words / time_take) * 60)
            console.log(total_speed)
            msg = "You Have Written " + No_of_words + " Words In" + time_take + " Sec With Speed Of" + total_speed + " words per Minute";
            var text_written = document.getElementById('text_written');
            text_written.innerText = msg;


        }







        var text_write = document.getElementById('text_write');


        var text_button = document.getElementById('text_button');
        text_button.addEventListener('click', function Button() {
            if (this.innerText == 'Start') {
                text_write.disabled = false;
                Text_Start();

                text_button.innerText = 'Done'

            } else if (this.innerText == 'Done') {
                text_write.disabled = true;

                Text_End();



                text_button.innerText = 'Start'
            }


        });
    </script>


